<%- include('header') %>

<div class="body-content">
    <div class="card-header">
        <h6 class="fs-17 fw-semi-bold mb-0">Add City</h6>
    </div>

    <div class="card mb-4">
        <div class="card-body">

            <% if(city.Arabicname) { %>
                <form action="/city/<%=city.id%>" method="POST">
            <% } else { %>
            <form action="/city" method="POST">
                <% } %>
                <!-- Arabic Questions Section -->
                <div class="bg-light p-3 my-2">
                   

                    <div class="mb-3">
                        <label for="email" class="form-label">Arabic City Name</label>
                        <input type="text" class="form-control" id="email" name="ArabicCity" placeholder="Enter Arabic City Name"  value="<%=city.Arabicname%>" required>
                    </div>

                    <div class="mb-3">
                        <label for="facebook" class="form-label">Englsih City Name</label>
                        <input type="text" class="form-control" id="facebook" name="EnglishCity"  placeholder="Enter Englsih City Name" value="<%=city.name%>" >
                    </div>

                            </div>
                   
                    </div>
                </div>

             
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

</body>
<script src="js/metisMenu/metisMenu.min.js"></script>
<script src="js/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
<!-- message hide -->
<script src="js/sidebar.js"></script>
<script src="js/common.js"></script>

    

</html>