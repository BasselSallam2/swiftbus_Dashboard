<%- include('header') %>
<!--/.navbar-->
<div class="body-content">
    <div class="card-header">
        <h6 class="fs-17 fw-semi-bold mb-0">Employees List</h6>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <div class="text-end">
                <a class="btn btn-success" href="/employeecreate">
                    <i class="fas fa-user-plus"></i>
                    Add New Employee
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover basic" id="agentlist">
                    <thead>
                        <tr>
                            <th scope="col">Employee Name</th>
                            <th scope="col">Employee Phone</th>
                            <th scope="col">Employee Type</th>
                            <th scope="col">National ID</th>
                            <th scope="col">Address</th>
                            <th scope="col">Email</th>
                            <th scope="col">Password</th>
                            <th scope="col">Role</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0 ; i < Employees.length ; i++) { %>
                        <tr>
                            <td><%= Employees[i].name %></td>
                            <td><%= Employees[i].phone %></td>
                            <td><%= Employees[i].type %></td>
                            <td><%= Employees[i].nationalid %></td>
                            <td><%= Employees[i].address %></td>
                            <td><%= Employees[i].User.email %></td>
                            <td><%= Employees[i].User.password %></td>
                            <td><%= Employees[i].User.role %></td>
                            <td style="display: flex; gap: 5px;">
                                <a href="/employee/<%=Employees[i].id%>" class="btn btn-sm btn-info text-white" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="/employee/delete/<%=Employees[i].id%>" class="btn btn-sm btn-danger text-white" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                                <a href="/employee/ticket/<%=Employees[i].id%>" class="btn btn-sm btn-primary text-white" title="Tickets">
                                    <i class="fas fa-ticket-alt"></i>
                                </a>
                                <%  if(Employees[i].type == "Agent") { %>
                                <a href="/employee/money/<%= Employees[i].id %>" class="btn btn-sm btn-warning text-white" title="Money">
                                    <i class="fas fa-dollar-sign"></i>
                                </a>
                                <% } %>

                            </td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="confirmationModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">The Following Data Will Be Deleted</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="confirmationMessage">
                <form action="#" method="post">
                    <h5 style="text-transform: capitalize; font-size: 16px; font-weight: bold; background-color: #e8e8e8; padding: 5px 15px;">
                        Agent
                    </h5>
                    <ul>
                        <li style="list-style-type: none;">Agent 02 (2)</li>
                    </ul>
                    <br>
                    <h5 style="text-transform: capitalize; font-size: 16px; font-weight: bold; background-color: #e8e8e8; padding: 5px 15px;">
                        Ticket
                    </h5>
                    <ul>
                        <li style="list-style-type: none;">TBLHZ9RKPI (21)</li>
                        <li style="list-style-type: none;">TBX0SUT37F (22)</li>
                    </ul>
                    <br>
                    <div class="text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-danger">Confirm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Custom CSS for Alternating Row Colors -->
<style>
    /* Ensure alternating colors work */
    table tbody tr:nth-child(odd) {
        background-color: #f8f9fa !important; /* Light gray */
    }

    table tbody tr:nth-child(even) {
        background-color: #ffffff !important; /* White */
    }

    /* Ensure buttons are aligned next to each other */
    .action-buttons {
        display: flex;
        gap: 5px;
    }
</style>

