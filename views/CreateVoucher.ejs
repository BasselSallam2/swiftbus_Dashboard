<%- include('header') %>

<div class="body-content">
    <div class="card-header">
        <h6 class="fs-17 fw-semi-bold mb-0">Add Voucher</h6>
    </div>

    <div class="card mb-4">
        <div class="card-body">

            <% if(voucher.maximum) { %>
                <form action="/voucher/<%=voucher.id%>" method="POST">
            <% } else { %>
            <form action="/voucher" method="POST">
                <% } %>
                <!-- Arabic Questions Section -->
                <div class="bg-light p-3 my-2">
                   

                    <div class="mb-3">
                        <label for="email" class="form-label">Voucher Code </label>
                        <input type="text" class="form-control" id="email" name="code" placeholder="Enter Voucher Code"  value="<%=voucher.code%>" required>
                    </div>

                    <div class="mb-3">
                        <label for="discount" class="form-label">Voucher Discount Percentage</label>
                        <input type="number" class="form-control" id="discount" name="percentage" placeholder="Enter Discount Percentage" value="<%=voucher.percentage%>" required>
                    </div>

                    <div class="mb-3">
                        <label for="discount" class="form-label">Voucher Maximum Discount</label>
                        <input type="number" class="form-control" id="discount" name="maximum" placeholder="Enter Maximum Discount" value="<%=voucher.maximum%>" required>
                    </div>

                    <div class="mb-3">
                        <label for="discount" class="form-label">Voucher Avaliable Time of usage </label>
                        <input type="number" class="form-control" id="discount" name="avaliable" placeholder="Enter Maximum Usage Number" value="<%=voucher.avaliable%>" required>
                    </div>

                            </div>
                   
                    </div>
                </div>

             
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

</body>
<script src="js/metisMenu/metisMenu.min.js"></script>
<script src="js/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
<!-- message hide -->
<script src="js/sidebar.js"></script>
<script src="js/common.js"></script>

    

</html>